/*
	This automates the creation of the Virtualization GUI window.

	*** IMPORTANT ***
	Be aware that this task is configured for development in Windows.
	Adjust the options.shell.executable field below should you launch
	this task from a *NIX environment.

*/
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Virtualization",
			"type": "shell",
			"options": {
				"statusbar": {
					"hide": true
				},
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/d",
						"/c"
					]
				}
			},
			"command": "${workspaceFolder}\\tools\\.venv\\Scripts\\python",
			"args": [
				"${workspaceFolder}\\tools\\start_virtualization.py"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": [],
			"presentation": {
				"reveal": "never",
			}
		},
		{
			"label": "LumenLab - Upload (Virtualization)",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run",
				"-e",
				"virtualization",
				"--target",
				"upload"
			],
			"problemMatcher": [
				"$platformio"
			],
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "PlatformIO: Upload",
			"type": "shell",
			"command": "platformio run --target upload",
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Upload and Start Virtualization",
			"dependsOrder": "sequence",
			"dependsOn": [
				"LumenLab - Upload (Virtualization)",
				"Start Virtualization"
			],
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Upload and Start Debug",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run",
				"-e",
				"debug",
				"--target",
				"upload",
				"&&",
				"platformio",
				"device",
				"monitor"
			],
			"problemMatcher": [],
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"panel": "shared",
				"clear": true,
				"reveal": "always",
				"focus": true
			}
		},
		{
			"label": "LumenLab - Upload (release)",
			"type": "shell",
			"command": "platformio",
			"args": [
				"run",
				"-e",
				"release",
				"--target",
				"upload"
			],
			"problemMatcher": [
				"$platformio"
			],
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "LumenLab - Clean",
			"type": "shell",
			"command": "platformio run --target clean -e virtualization -e debug -e release -e native",
			"problemMatcher": [
				"$platformio"
			],
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "LumenLab - Run Tests",
			"type": "shell",
			"command": "platformio test --environment native -v",
			"problemMatcher": [
				"$platformio"
			],
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		}
	]
}